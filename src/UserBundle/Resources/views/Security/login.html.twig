{% extends "UserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="login-popup">
        <form name="fos_user_login_form" action="{{ path("fos_user_security_check") }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>


            <div class="form-top">
                <i class="fa fa-times" aria-hidden="true"></i>
                <h3>Se Connecter</h3>
            </div>

            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"
                   placeholder="Adresse e-mail"/><br>

            <div class="center-password">
                <input type="password" id="password" name="_password" required="required"
                       placeholder="Mot de passe"/><br>
            </div>

                <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                <label for="remember_me" class="small" id="remember_me-label">{{ 'security.login.remember_me'|trans }}</label><br>
                <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"/><br>
                <hr class="form-separator">
                <p class="not-registred small">Pas encore membre?</p>
                <a href="/register">
                    <input type="button" value="Inscription" class="register-btn">
                </a>
                <div class="error"></div>

        </form>

    </div>
{% endblock fos_user_content %}
